{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://apache.org/burr/spec/run-report.schema.json",
  "title": "Apache Burr golden run report (burr.run_report/v1)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "run_report_version",
    "environment",
    "scenario",
    "runs"
  ],
  "properties": {
    "run_report_version": {
      "type": "string",
      "const": "burr.run_report/v1"
    },
    "environment": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "paths"
      ],
      "properties": {
        "paths": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "repo_root",
            "run_dir",
            "home_dir",
            "temp_dir"
          ],
          "properties": {
            "repo_root": {
              "type": "string"
            },
            "run_dir": {
              "type": "string"
            },
            "home_dir": {
              "type": "string"
            },
            "temp_dir": {
              "type": "string"
            }
          }
        },
        "os": {
          "type": "object"
        },
        "python": {
          "type": "object"
        },
        "rust": {
          "type": "object"
        }
      }
    },
    "scenario": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "spec_version",
        "path",
        "sha256"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "spec_version": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "sha256": {
          "type": "string"
        }
      }
    },
    "runs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/Run"
      }
    },
    "artifacts": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "tracking": {
          "type": "object"
        },
        "persistence": {
          "type": "object"
        }
      }
    }
  },
  "$defs": {
    "Run": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "engine",
        "calls"
      ],
      "properties": {
        "engine": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "kind"
          ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [
                "python",
                "rust"
              ]
            },
            "version": {
              "type": "string"
            },
            "notes": {
              "type": "string"
            }
          }
        },
        "calls": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/CallResult"
          }
        }
      }
    },
    "CallResult": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "op",
        "ok"
      ],
      "properties": {
        "op": {
          "type": "string"
        },
        "ok": {
          "type": "boolean"
        },
        "exception": {
          "$ref": "#/$defs/Exception"
        },
        "return": {},
        "events": {
          "type": "array",
          "items": {}
        },
        "state_before": {
          "type": "object"
        },
        "state_after": {
          "type": "object"
        },
        "meta": {
          "type": "object"
        }
      }
    },
    "Exception": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "type",
        "message"
      ],
      "properties": {
        "type": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "traceback": {
          "type": "string"
        }
      }
    }
  }
}
